<div id="grid"></div>

<script>
    $(document).ready(function () {
        var sessionId = "@ViewBag.UserID2";
        console.log(sessionId);
        var dataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    url: "http://localhost:5064/api/StudentFeedback/GetStdFeedback?id=" + sessionId,
                    type: "POST",
                    dataType: "json"
                }
            },
            pageSize: 10,
            schema: {
                model: {
                    fields: {
                        teacherId: { type: "number", editable: false, nullable: false },
                        rating: { type: "number", validation: { required: true } },
                        comment: { type: "string", validation: { required: true } },
                        batchYear: { type: "string", validation: { required: true } },
                        feedbackDate: { type: "date", validation: { required: true } }
                    }
                }
            }
        });

        $("#grid").kendoGrid({
            dataSource: dataSource,
            columns: [
                { field: "teacherId", title: "Intern ID" },
                { field: "rating", title: "Intern Name" },
                {
                    field: "comment",
                    title: "Gender"
                },
                {
                    field: "BatchYear",
                    title: "Topic ID"
                },
                {
                    field: "feedbackDate",
                    title: "FeedbackDate",
                    format: "{0:MM/dd/yyyy}"
                }
            ],
            pageable: true,
            sortable: true,
            filterable: true
        });

        dataSource.bind("requestEnd", function (e) {
            if (e.type === "create" || e.type === "update" || e.type === "destroy") {
                dataSource.read();
            }
        });

        $("#grid").on("click", ".k-grid-cancel-changes", function () {
            dataSource.cancelChanges();
        });
    });
</script>

