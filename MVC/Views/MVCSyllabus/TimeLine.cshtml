@{
    ViewData["Title"] = "Syllabus Timeline";
}

<h2>Syllabus Timeline</h2>
<div id="timeline"></div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#timeline").kendoTimeline({
                dataSource: {
                    transport: {
                        read: {
                            url: "/MVCSyllabus/GetSyllabusTimelineData/35", 
                            dataType: "json"
                        }
                    }
                },
                orientation: "horizontal"
            });
        });
    </script>
}