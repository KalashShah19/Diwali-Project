<div id="gantt"></div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/MVCSyllabus/GetSyllabusData',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    $("#gantt").kendoGantt({
                        dataSource: {
                            data: data
                        },
                        views: ["day", "week", {type:"month", selected:true}, "year"],
                        columns: [
                            { field: "chapterName", title: "Chapters" }
                        ]
                    });
                }
            });
        });
    </script>
}