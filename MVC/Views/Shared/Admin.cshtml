<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/kendo/dist/css/kendo.common.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/9.0.0/bootstrap/bootstrap-urban.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />

    <style>
        #navbar {
            position: sticky;
            top: 0;
            width: 100%;
            height: 60px;
            background-color: #3f51b5;
            color: white;
            display: flex;
            align-items: center;
            padding: 0 20px;
            box-sizing: border-box;
            z-index: 1000;
        }

        #navbar h1 {
            font-size: 20px;
            color: #FFD700;
            margin-right: auto;
        }

        .navbar-toggle {
            cursor: pointer;
            font-size: 24px;
            margin-right: 20px;
        }

        .navbar-search {
            flex: 1;
            max-width: 300px;
            margin-right: 20px;
        }

        .navbar-search input {
            width: 100%;
            padding: 5px 10px;
            border-radius: 4px;
            border: none;
            font-size: 14px;
        }

        .notification-icon {
            font-size: 20px;
            cursor: pointer;
            margin-right: 20px;
        }

        #wrapper {
            display: flex;
            height: calc(100vh - 60px);
            overflow: hidden;
        }

        #sidebar {
            width: 200px;
            background-color: #fff;
            color: #333;
            padding: 20px 0;
            box-sizing: border-box;
            border-right: 1px solid #ddd;
            display: flex;
            flex-direction: column;
            align-items: center;
            transition: width 0.3s;
        }

        #sidebar.collapsed {
            display: none;
        }

        #profile {
            text-align: center;
            margin-bottom: 20px;
        }

        #profile img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-bottom: 10px;
        }

        #profile p {
            margin: 0;
            font-size: 14px;
            color: #666;
        }

        #sidebar ul {
            list-style: none;
            padding: 0;
            width: 100%;
            text-align: center;
        }

        #sidebar ul li {
            padding: 15px;
            cursor: pointer;
            font-size: 16px;
            color: #333;
            border-bottom: 1px solid #ddd;
            display: flex;
            align-items: center;
        }

        #sidebar ul li:hover {
            background-color: #f0f0f0;
        }

        a {
            text-decoration: none;
        }

        #sidebar ul li i {
            margin-right: 10px;
        }

        #mainContent {
            flex: 1;
            padding: 20px;
            background-color: #f5f5f5;
            overflow-y: auto;
            transition: margin-left 0.3s;
        }

        .section {
            padding: 20px;
            background-color: #ffffff;
            margin-bottom: 20px;
            border-radius: 5px;
        }
    </style>
</head>

<body>

    <div id="navbar">
        <span class="navbar-toggle k-icon k-i-menu" id="toggleSidebar"></span>
        <h1> The Wonderful School </h1>
    </div>

    <div id="wrapper">
        <div id="sidebar">

            <ul id="menu">

                <a href="http://localhost:5255/Admin/">
                    <li data-target="#studentInfoSection"><i class="k-icon k-i-shape-circle"></i>Home </li>
                </a>

                <a href="http://localhost:5255/Admin/ManageStandard">
                    <li data-target="#studentInfoSection"><i class="k-icon k-i-shape-circle"></i>Manage Standard </li>
                </a>

                <a href="http://localhost:5255/Admin/ManageFeeStructure">
                    <li data-target="#studentInfoSection"><i class="k-icon k-i-shape-circle"></i>Manage Fees Structure
                    </li>
                </a>

                <a href="http://localhost:5255/Admin/ManageSubjects">
                    <li data-target="#studentInfoSection"><i class="k-icon k-i-shape-circle"></i>Manage Subjects </li>
                </a>

                <a href="http://localhost:5255/Admin/StudentDetails">
                    <li data-target="#studentInfoSection"><i class="k-icon k-i-shape-circle"></i>Manage Students </li>
                </a>

                <a href="http://localhost:5255/Admin/ManageSchoolInfo">
                    <li data-target="#studentInfoSection"><i class="k-icon k-i-shape-circle"></i>Manage School Info
                    </li>
                </a>

                <a href="http://localhost:5255/Admin/ViewFeedback">
                    <li data-target="#studentInfoSection"><i class="k-icon k-i-shape-circle"></i>View Feedbacks </li>
                </a>

                <a href="http://localhost:5255/Admin/TeacherDetails">
                    <li data-target="#studentInfoSection"><i class="k-icon k-i-shape-circle"></i>Manage Teachers </li>
                </a>

                <a href="http://localhost:5255/Admin/HireTeachers">
                    <li data-target="#studentInfoSection"><i class="k-icon k-i-shape-circle"></i>Hire Teachers</li>
                </a>

                <a href="http://localhost:5255/Admin/AdmitStudents">
                    <li data-target="#studentInfoSection"><i class="k-icon k-i-shape-circle"></i>Admit Students </li>
                </a>

                <a href="http://localhost:5255/Admin/ViewSyllabus">
                    <li data-target="#studentInfoSection"><i class="k-icon k-i-shape-circle"></i> View Syllabus </li>
                </a>

                <a href="http://localhost:5255/Admin/ManageClasswiseSubjects">
                    <li data-target="#studentInfoSection"><i class="k-icon k-i-shape-circle"></i> Manage Classwise
                        Subjects </li>
                </a>
                <a href="http://localhost:5255/Charts">
                    <li data-target="#studentInfoSection"><i class="k-icon k-i-shape-circle"></i> Charts</li>
                </a>

            </ul>
        </div>

        <div id="mainContent">
            @RenderBody()
        </div>
    </div>

    <script>
        const apihost = "http://localhost:5064";
        $(document).ready(function () {
            $('#toggleSidebar').click(function () {
                $('#sidebar').toggleClass('collapsed');
                $('#mainContent').css('flex', $('#sidebar').hasClass('collapsed') ? '2' : '1');
            });

            $("#menu li").click(function () {
                const targetSection = $($(this).data("target"));
                $("html, body").animate({
                    scrollTop: targetSection.offset().top - 60
                }, 500);
            });
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/kendo/dist/js/kendo.all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>